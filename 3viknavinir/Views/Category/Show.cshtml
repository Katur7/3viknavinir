@model IEnumerable<_3viknavinir.Models.Media>
@{
    ViewBag.Title = "Þættir";
}

<div class="breadcrumb">
    <ul class="crumbs">
        <li class="crumb crumb-first">
            @Html.ActionLink("SÍÁT", "Index", "Home")
        </li>
        <li class="crumb crumb-last">
            <span class="crumb-seperator"> > </span>
            @Html.ActionLink("Flokkar", "Categories", "Category")
        </li>
        <li class="crumb crumb-last">
            <span class="crumb-seperator"> > </span>
            @Html.ActionLink("Þættir", "Show", "Category")
        </li>
    </ul>
</div>
<h2>@ViewBag.Title</h2>
<div class="alphabetizedTextDiv">
    <table id="AlphabetListTable" class="table-striped">
        <thead>
            <tr class="requestRow">
                <th class="alphabetName">Nafn</th>
                <th class="alphabetYear">Ártal</th>
                <th class="alphabettDownload">Niðurhal</th>
            </tr>

            @foreach ( var item in Model )
            {
                <tr class="homePageTableRows">
                    <td>@Html.ActionLink(item.title, "Details", "Translation", new { id = item.ID }, null)</td>
                    <td>@item.yearOfRelease</td>
                    <td class="alphabetDownload"><a href="#" class="glyphicon glyphicon-download" style="left: 35px"></a></td>
                </tr>
            }
        </thead>
    </table>
</div>
