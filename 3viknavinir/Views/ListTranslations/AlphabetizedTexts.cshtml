@model _3viknavinir.Models.AlphabetizedTextsViewmodel
@{
    ViewBag.Title = "Textar A-Ö";
}
    <div class="breadcrumb">
        <ul class="crumbs">
            <li class="crumb crumb-first">
                @Html.ActionLink("SÍÁT", "Index", "Home")
            </li>
            <li class="crumb crumb-last">
                <span class="crumb-seperator"> > </span>
                @Html.ActionLink("Textar A-Ö", "AlphabetizedTexts", "ListTranslations")
            </li>
        </ul>
    </div>
    <h2>Textar A-Ö</h2>
    @*Erla*@
    <div id="searchBox">
        @using (Html.BeginForm("SearchMediaView", "Search", FormMethod.Get))
        {
            @Html.TextBox("SearchString")
            <input type="submit" value="Leita" class="btn btn-default" id="searchButton" />
        }
    </div>
    <form action="/Translation/Translate">
        <input type="submit" value="" id="addRequestButton" />
        <div class="newTranslationButton"><p>Bæta við þýðingu</p></div>
    </form>
    <div class="alphabetizedTextDiv">
        <table id="AlphabetListTable" class="table-striped">
            <thead>
                <tr class="requestRow">
                    <th class="alphabetName">Nafn</th>
                    <th class="alphabetYear">Ártal</th>
                    <th class="alphabetNumberDonwload">Sótt</th>
                    <th class="alphabetUpvote">Upvote</th>
                    <th class="alphabettDownload">Niðurhal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.allMedia)
                {
                    <tr class="requestRow">
                        <td class="alphabetname">@Html.ActionLink(item.media.title, "Details", "Translation", new { id = item.media.ID }, null)</td>
                        <td class="alphabetYear">@item.media.yearOfRelease</td>
                        <td class="alphabettNumberDownload">er víst ekki til fall/breyta</td>
                        @*<td class="alphabetUpvote">@Html.ActionLink("", "", "", new { @class="glyphicon glyphicon-thumbs-up")</td>*@
                        <td class="alphabetUpvote">@item.upvotes<a href="#" class="glyphicon glyphicon-thumbs-up" id="@item.media.ID" style="left: 35px"></a></td>
                        <td class="alphabetDownload"><a href="#" class="glyphicon glyphicon-download" style="left: 35px"></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pageCount">
            @for (int i = 0; i < Model.pageCount; i++)
            {
                @Html.ActionLink((i + 1).ToString(), "AlphabetizedTexts", "ListTranslations", new { id = i }, null)
            }
        </div>
    </div>
