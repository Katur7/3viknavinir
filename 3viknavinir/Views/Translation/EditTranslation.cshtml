@model _3viknavinir.Models.EditTranslationViewModel
@{
    
    ViewBag.Title = "Breyta þýðingu á " + Model.title + " (" + Model.year + ")";
}

<h2>@ViewBag.Title</h2>

<ul class="crumbs">
    <li class="crumb crumb-first">
        @Html.ActionLink("SÍÁT", "Index", "Home")
    </li>
    <li class="crumb crumbs">
        <span class="crumb-seperator"> > </span>
        @Html.ActionLink("Textar A-Ö", "AlphabetizedTexts", "ListTranslations")
    </li>
    <li class="crumb crumbs">
        <span class="crumb-seperator"> > </span>
        @Html.ActionLink(Model.title, "Details", "Translation", new { id = @Model.mediaID }, null)
    </li>
    <li class="crumb crumb-last">
        <span class="crumb-seperator"> > </span>
        <a href="#">Breyta þýðingu</a>
    </li>
</ul>

<div id="TextToEdit" class="col-md-6">
    @Html.HiddenFor(model => model.counter)
    @Html.HiddenFor(model => model.mediaID)
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editTranslationForm" }))
    {
        @Html.AntiForgeryToken( )
        @Html.ValidationSummary( true )
        foreach ( var item in Model.textToTranslate )
        {
            <div class="translationLine" id="@item.ID">
                @Html.HiddenFor(model => item.ID)
                <p class="chapterLabel">@Html.Label("Kafli")</p>
                @Html.TextBoxFor(model => item.chapterNumber, new { @class = "chapterTextBox" })
                @Html.ValidationMessageFor(model => item.chapterNumber)
                <p class="startTimeLabel">@Html.Label("Byrjunartími")</p>
                @Html.TextBoxFor(model => item.startTime, new { @class = "startTimeTextBox" })
                @Html.ValidationMessageFor(model => item.startTime)
                <div>
                    <p class="timeLabel">-></p>
                </div>
                <p class="endTimeLabel">@Html.Label( "Endatími" )</p>
                @Html.TextBoxFor( model => item.endTime, new { @class = "endTimeTextBox" } )
                @Html.ValidationMessageFor( model => item.endTime )
                <p class="subtitleTextLabel">@Html.Label( "Texti" )</p>
                @Html.TextBoxFor( model => item.subtitle, new { @class = "subtitleTextBox" } )
                @Html.ValidationMessageFor( model => item.subtitle )
            </div>
        }
        <div class="editLines">
            <a href="#" class="AddLine">Bæta við línu</a>
        </div>

        <div class="fullyTranslateCheckbox">
            <p class="checkbox">Fullkláraður texti <input type="checkbox" class="checkbox-inline" /></p>
        </div>

        <div class="col-md-10">
            <input type="submit" value="Vista" class="btn btn-default" />
        </div>

    }
</div>
	
<div id="OldText">
    @foreach ( var item in Model.translatedText )
    {
        <div>
            @Html.HiddenFor( model => item.ID )
                <p class="oldChapterLabel">@Html.Label( "Kafli" )</p>
                <input type="text" name="chapterNumber" value="@item.chapterNumber" class="oldChapterTextBox" readonly>
            
                    <p class="oldStartTimeLabel">@Html.Label( "Byrjunartími" )</p>
                    <input type="text" name="startTime" value="@item.startTime" class="oldStartTimeTextBox" readonly>
                
                    <p class="oldTimeLabel">-></p>
               
                    <p class="oldEndTimeLabel">@Html.Label( "Endatími" )</p>
                    <input type="text" name="endTime" value="@item.endTime" class="oldEndTimeTextBox" readonly>
              
                <p class="oldSubtitleLabel">@Html.Label( "Texti" )</p>
                <input type="text" name="subtitle" value="@item.subtitle" class="oldSubtitleTextBox" readonly>
       </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
