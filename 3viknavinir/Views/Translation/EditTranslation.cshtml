@model _3viknavinir.Models.EditTranslationViewModel

@{
    ViewBag.Title = "Breyta þýðingu á " + Model.title + " (" + Model.year + ")";
}

<h2>@ViewBag.Title</h2>

<div id="TextToEdit">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        foreach(var item in Model.textToTranslate)
        {
            <div class="form-group">
                @Html.HiddenFor(model => item.Id)
                <div class="col-md-10">
                    @Html.EditorFor(model => item.chapterNumber)
                    @Html.ValidationMessageFor(model => item.chapterNumber)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => item.startTime)
                    @Html.ValidationMessageFor(model => item.startTime)
                </div>
                <p>-></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => item.endTime)
                    @Html.ValidationMessageFor(model => item.endTime)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => item.subtitle)
                    @Html.ValidationMessageFor(model => item.subtitle)
                </div>
            </div>
        }
        
        // Input button for "Fullkláraður texti"
        
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    }


