@model _3viknavinir.Models.Media

@{
    ViewBag.Title = "Edit";
}

<h2>Breyta lýsingu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.Label("Titill: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.title)
                @Html.ValidationMessageFor(model => model.title)
            </div>
        </div>

        <div class="form-group">
			@Html.Label("Ártal: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.yearOfRelease)
                @Html.ValidationMessageFor(model => model.yearOfRelease)
            </div>
        </div>

        <div class="form-group">
			@Html.Label("Lýsing: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.description)
                @Html.ValidationMessageFor(model => model.description)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Flokkur: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select>
                    <option value="Annað">Annað</option>
                    <option value="Ævintýramynd">Ævintýramynd</option>
                    <option value="Gamanmynd">Gamanmynd</option>
                    <option value="Fjölskyldumyndir">Fjölskyldumyndir</option>
                    <option value="Íslenskar">Íslenskar</option>
                    <option value="Söngleikur">Söngleikur</option>
                    <option value="Rómantík">Rómantík</option>
                    <option value="Spennumyndir">Spennumyndir</option>
                    <option value="Hryllingsmyndir">Hryllingsmyndir</option>
                    <option value="Hasarmyndir">Hasarmyndir</option>
                    <option value="Barnamyndir">Barnamyndir</option>
                    <option value="Drama">Drama</option>
                    <option value="Vísindaskáldskapur">Vísindaskáldskapur</option>
                    <option value="Þættir">Þættir</option>
                    <option value="Anime">Anime</option>
                    <option value="Heimildamyndir">Heimildamyndir</option>
                    
                 </select>
                 @Html.ValidationMessageFor(model => model.Category)
            </div>
        </div>
      

        <div class="form-group">
			@Html.Label("Mynd: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.posterPath)<input type="file" value="Velja mynd" id="choosePoster"/>
                @Html.ValidationMessageFor(model => model.posterPath)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista" class="btn btn-default" id="saveEditDescriptionButton"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Til baka", "Details")
</div>
