@model _3viknavinir.Models.MediaDetailsViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Details";
}
<ul class="crumbs">
    <li class="crumb crumb-first">
        @Html.ActionLink("SÍÁT", "Index", "Home")
    </li>
    <li class="crumb crumbs">
        <span class="crumb-seperator"> > </span>
        @Html.ActionLink("Textar A-Ö", "AlphabetizedTexts", "ListTranslations")
    </li>
    <li class="crumb crumb-last">
        <span class="crumb-seperator"> > </span>
        @Html.ActionLink(Model.media.title, "Details", "Translation", new { id = Model.media.ID }, null)
    </li>
</ul>
<h2>@Html.DisplayFor(model => model.media.title) ( @Html.DisplayFor(model => model.media.yearOfRelease) )</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
		<dt id="">
		<dt>
			@Html.DisplayName("Sett inn af: ")
		</dt>
		<dd>
			@Html.DisplayFor(model => Model.userName)
		</dd>
        <dt>
            @Html.DisplayName("IMDB ID: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.media.imdbID)
        </dd>
        <dt class="description-headder">
			@Html.DisplayName("Lýsing: ")
        </dt>
        <dd>
            <div class="description">@Html.DisplayFor(model => model.media.description)</div>
        </dd>
    </dl>
    @*<div class="detailPhoto">
        <img src="@Html.DisplayFor(model => model.media.posterPath)" alt="@Html.DisplayFor(model => model.media.title)">
    </div>*@
<p>
		@Html.ActionLink("Athugasemdir", "Translation", "Discussion", new { id =  Model.media.ID}, null)
</p>
</div>

<form action="/Translation/Download/@Model.media.ID"><input type="submit" value="Hlaða niður þýðingu" class="btn btn-default" id="downloadTranslationButton" /></form>
<form action="/Translation/EditTranslation/@Model.media.ID"><input type="submit" value="Breyta þýðingu" class="btn btn-default" id="editTranslationButton" /></form>
<form action="/Translation/Edit/@Model.media.ID"><input type="submit" value="Breyta lýsingu" class="btn btn-default" id="editDetailsButton" /></form>
