
@{
    ViewBag.Title = "SearchMediaView";
}

<h2>SearchMediaView</h2>
<div class="breadcrumb">
    <ul class="crumbs">
        <li class="crumb crumb-first">
            <a href="/">SÍÁT</a>
        </li>
        <li class="crumb crumb-last">
            <span class="crumb-seperator"> > </span>
            <a href="#">Leita</a>
        </li>
    </ul>
</div>
<h2>Leitarniðurstöður</h2>
<div class="alphabetizedTextDiv">
    <table id="AlphabetListTable" class="table-striped">
        <thead>
            <tr class="requestRow">
                <th class="alphabetName">Nafn</th>
                <th class="alphabetYear">Ártal</th>
                <th class="alphabetNumberDonwload">Sótt</th>
                <th class="alphabetUpvote">Upvote</th>
                <th class="alphabettDownload">Niðurhal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="requestRow">
                    <td class="alphabetname">@Html.ActionLink(item.title, "Details", "Translation", new { id = item.Id }, null)</td>
                    <td class="alphabetYear">@item.yearOfRelease</td>
                    <td class="alphabettNumberDownload">er víst ekki til fall/breyta</td>
                    @*<td class="alphabetUpvote">@Html.ActionLink("", "", "", new { @class="glyphicon glyphicon-thumbs-up")</td>*@
                    <td class="alphabetUpvote">16<a href="#" class="glyphicon glyphicon-thumbs-up" style="left: 35px"></a></td>
                    <td class="alphabetDownload"><a href="#" class="glyphicon glyphicon-download" style="left: 35px"></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
