@model _3viknavinir.Models.SearchMediaViewModel
@{
    ViewBag.Title = "SearchMediaView";
}

<div class="breadcrumb">
    <ul class="crumbs">
        <li class="crumb crumb-first">
            @Html.ActionLink("SÍÁT", "Index", "Home")
        </li>
        <li class="crumb crumbs">
            <span class="crumb-seperator"> > </span>
            @Html.ActionLink("Textar A-Ö", "Alphabetizedtexts", "ListTranslations")
        </li>
        <li class="crumb crumb-last">
            <span class="crumb-seperator"> > </span>
            @Html.ActionLink("Leita", "SearchMedia", "Search")
        </li>
    </ul>
</div>
<h2>Leitarniðurstöður</h2>
@*Erla*@
<div id="searchBox">
	@using (Html.BeginForm("SearchMediaView", "Search", FormMethod.Get))
	{
		@Html.TextBox("SearchString")
		<input type="submit" value="Leita" class="btn btn-default" id="searchButton" />
	}
</div>
<form action="/Translation/Translate">
    <input type="submit" value="" id="addRequestButton" />
    <div class="newTranslationButton"><span class="addTranslationText">@Html.ActionLink("Bæta við þýðingu", "Translate", "Translation")</span></div>
</form>
<div class="alphabetizedTextDiv">
    <table id="AlphabetListTable" class="table-striped">
        <thead>
            <tr class="requestRow">
                <th>Nafn</th>
                <th>Ártal</th>
                <th>Upvote</th>
                <th>Niðurhal</th>
            </tr>
        </thead>
        <tbody>
			@if (Model != null)
			{
				foreach (var item in Model.searchedMedia)
				{
					<tr class="requestRow">
						<td>@Html.ActionLink(item.media.title, "Details", "Translation", new { id = item.media.ID }, null)</td>
						<td>@item.media.yearOfRelease</td>
						<td>@item.upvotes<a href="#" class="upvoteTranslation glyphicon glyphicon-thumbs-up glyphicon-position" id="@item.media.ID"></a></td>
						<td><a href="~/Translation/Download/@item.media.ID" class="glyphicon glyphicon-download glyphicon-position"></a></td>
					</tr>
				}
			}
        </tbody>
    </table>
</div>
