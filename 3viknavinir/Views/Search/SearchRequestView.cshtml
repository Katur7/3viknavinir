@model _3viknavinir.Models.SearchRequestViewModel
@{
	ViewBag.Title = "SearchRequestView";
}

<div class="breadcrumb">
	<ul class="crumbs">
		<li class="crumb crumb-first">
			@Html.ActionLink("SÍÁT", "Index", "Home")
		</li>
        <li class="crumb crumbs">
            <span class="crumb-seperator"> > </span>
            @Html.ActionLink("Beiðnir", "Requests", "ListRequest")
        </li>
		<li class="crumb crumb-last">
			<span class="crumb-seperator"> > </span>
			@Html.ActionLink("Leita", "SearchRequest", "Search")
		</li>
	</ul>
</div>
<h2>Leitarniðurstöður</h2>
@*Erla*@
<div id="searchBox">
	@using (Html.BeginForm("SearchRequestView", "Search", FormMethod.Get))
	{
		@Html.TextBox("SearchString")
		<input type="submit" value="Leita" class="btn btn-default" id="searchButton" />
	}
</div>
<div class="alphabetizedTextDiv">
	<table id="AlphabetListTable" class="table-striped">
		<thead>
			<tr class="requestRow">
				<th class="alphabetName">Nafn</th>
				<th class="alphabetYear">Ártal</th>
				<th class="alphabetUpvote">Upvote</th>
			</tr>
		</thead>
		<tbody>
			@if(Model != null)
			{
				foreach (var item in Model.searchedRequests)
				{
					<tr class="requestRow">
						<td class="alphabetname">@item.title</td>
						<td class="alphabetYear">@item.yearOfRelease</td>
						<td class="requestUpvote">TODO<a href="#" class="upvoteRequest glyphicon glyphicon-thumbs-up" id="@item.ID" style="left: 35px"></a></td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>