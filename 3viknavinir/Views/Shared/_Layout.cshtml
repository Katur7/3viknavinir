@* Erla og Grímur *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SÍÁT <<</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui-1.10.4.custom.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui-1.10.4.custom.css" />
</head>
<body>
    <div class="wrapper">
        <div id="header" class="navbar navbar-default navbar-static-top">
            <div id="menu-top" class="navbar-collapse">
                <div class="leftheader">
                    <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/siat_logo.jpg")" class="logoimg" alt="logo" /></a>
                    <a href="@Url.Action("Index", "Home")" class="logotext"><h1>SÍÁT &lt; &lt;</h1></a>
                </div>
                @Html.Partial( "_LoginPartial" )
            </div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar about"></span>
                </button>
            </div>
            <div id="tabs">
                <ul class="nav nav-tabs nav-justified">
                    <li class="active home">@Html.ActionLink("Forsíða", "Index", "Home")</li>
                    <li class="active alphabetic">@Html.ActionLink("Textar A-Ö", "AlphabetizedTexts", "ListTranslations")</li>
                    <li class="active categories">@Html.ActionLink("Flokkar", "Categories", "Category")</li>
                    <li class="active requests">@Html.ActionLink("Beiðnir", "Requests", "ListRequest")</li>
                    <li class="active translate">@Html.ActionLink("Þýða", "Translate", "Translation")</li>
                    <li class="active about">@Html.ActionLink("Um Okkur", "About", "Home")</li>
                </ul>
            </div>
			<div class="clearfooter"></div>
        </div>
        <div class="container body-content">
            @RenderBody( )
        </div>
        <div id="push"></div>
        <footer>
            <span class="left h4">@Html.ActionLink( "Algengar Spurningar", "FAQ", "Home" )</span>
            <span class="right h4">@Html.ActionLink( "Hafa Samband", "Contact", "Home" )</span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Scripts.js")
   
    <script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
    @RenderSection( "scripts", required: false )
</body>
</html>
