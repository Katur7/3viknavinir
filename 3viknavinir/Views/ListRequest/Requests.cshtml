@model _3viknavinir.Models.ViewModels.ListRequestViewModel
@{
    ViewBag.Title = "Beiðnir";
}
    <div class="breadcrumb">
        <ul class="crumbs">
            <li class="crumb crumb-first">
                @Html.ActionLink("SÍÁT", "Index", "Home")
            </li>
            <li class="crumb crumb-last">
                <span class="crumb-seperator"> > </span>
                @Html.ActionLink("Beiðnir", "Request", "Request")
            </li>
        </ul>
    </div>
    <h2>@ViewBag.Title</h2>
    @*Erla*@
    <div id="searchBox">
        @using (Html.BeginForm("SearchRequestView", "Search", FormMethod.Get))
        {
            @Html.TextBox("SearchString")
            <input type="submit" value="Leita" class="btn btn-default" id="searchButton" />
        }
    </div>
    <div>
        <form action="/ListRequest/NewRequest/"><input type="submit" value="" id="addRequestButton" /></form>
        <div class="newRequestButton"><p>Bæta við beiðni</p></div>
    </div>
    <div class="requesttablediv">
        <table id="RequestTable" class="table-striped">
            <thead>
                <tr class="requestRow">
                    <th class="requestName">Nafn</th>
                    <th class="requestName">Sett inn af</th>
                    <th class="requestYear">Ártal</th>
                    <th class="requestIMDBID">IMDB ID</th>
                    <th class="requestUpvote">Upvote</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.allRequests)
                {
                    <tr class="requestRow">
						<td class="requestName">@item.title</td>
                        <td class="requestName">@item.requestByName</td>
                        <td class="requestYear">@item.yearOfRelease</td>
                        <td class="requestIMDBID">@item.IMDBId</td>
                        <td class="requestUpvote">@item.upvotes<a href="#" class="upvoteRequest glyphicon glyphicon-thumbs-up" id="@item.Id" style="left: 35px"></a></td>
                    </tr>
                }
            </tbody>
        </table>
		<div class="pageCount">
			@for (int i = 0; i < Model.pageCount ; i++)
			{
				@Html.ActionLink((i + 1).ToString(), "Requests", "LListRequest", new { id = i }, null)
			}
		</div>

    </div>
